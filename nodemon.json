{
  "watch": ["src"],
  "ext": "ts,json",
  "verbose": true,
  "ignore": [
    "**/*.unit.ts",
    "**/*.integration.ts",
    "**/*.fixture.ts"
  ],
  "events": {
    "restart": "echo 'App restarted modified file:\n'$FILENAME'\" '"
  },
  "exec": "node --inspect=0.0.0.0:9222 -r ts-node/register ./src/main/server.ts"
}
