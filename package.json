{
  "name": "api",
  "version": "0.1.0",
  "description": "A boilerplate API made with clean architecture",
  "main": "dist/server.js",
  "keywords": [
    "Boilerplate",
    "API",
    "Backend",
    "NodeJS",
    "ExpressJS",
    "Clean Architecture"
  ],
  "author": "Daniel Prates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:danprates/boilerplate-api.git"
  },
  "engines": {
    "node": ">=16.14.2",
    "npm": ">=8.5.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9222 --respawn --transpile-only --ignore-watch node_modules src/server.ts | pino-pretty -c",
    "build": "rimraf dist && tsc -p tsconfig-build.json && tsconfig-replace-paths -p tsconfig-build.json -s ./src -o ./dist",
    "lint": "eslint --fix --ext .js,.ts .",
    "test": "jest --passWithNoTests --runInBand --silent --no-cache",
    "test:staged": "npm run test",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:ci": "npm test -- --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "version": "auto-changelog -p -b 1000 -l 1000 --template keepachangelog && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "auto-changelog": "^2.4.0",
    "better-sqlite3": "^7.5.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.1.2",
    "graphql": "^16.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^12.4.1",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-replace-paths": "0.0.11",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "apollo-server-express": "^3.7.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mongodb": "3.7.0",
    "openapi-types": "^11.0.0",
    "pg": "^8.7.3",
    "pino": "^7.11.0",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.6"
  }
}
