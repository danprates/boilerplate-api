{
  "name": "api",
  "version": "0.0.1",
  "description": "A boilerplate API made with clean architecture",
  "main": "dist/main/server.js",
  "keywords": [
    "Boilerplate",
    "API",
    "Backend",
    "NodeJS",
    "ExpressJS",
    "Clean Architecture"
  ],
  "author": "Daniel Prates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:danprates/boilerplate-api.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node dist/main/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9222 --respawn --transpile-only --ignore-watch node_modules src/main/server.ts | pino-pretty -c",
    "build": "rimraf dist && tsc -p tsconfig-build.json && tsconfig-replace-paths -p tsconfig-build.json -s ./src -o ./dist",
    "lint": "eslint --fix --ext .js,.ts .",
    "test": "jest --passWithNoTests --runInBand --silent --no-cache",
    "test:staged": "npm run test",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:ci": "npm test -- --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "version": "auto-changelog -p -b 1000"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.3",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "auto-changelog": "^2.3.0",
    "better-sqlite3": "^7.4.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.2.8",
    "graphql": "^15.7.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^12.1.2",
    "pino-pretty": "^7.2.0",
    "prettier": "^2.5.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-replace-paths": "0.0.11",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "apollo-server-express": "^3.5.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "mongodb": "3.7.0",
    "openapi-types": "^9.3.1",
    "pg": "^8.7.1",
    "pino": "^7.4.1",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.41"
  }
}
