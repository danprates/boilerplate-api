{
  "name": "api",
  "version": "0.1.0",
  "description": "A boilerplate API made with clean architecture",
  "main": "dist/server.js",
  "keywords": [
    "Boilerplate",
    "API",
    "Backend",
    "NodeJS",
    "ExpressJS",
    "Clean Architecture"
  ],
  "author": "Daniel Prates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:danprates/boilerplate-api.git"
  },
  "engines": {
    "node": ">=16.14.2",
    "npm": ">=8.5.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9222 --respawn --transpile-only --ignore-watch node_modules src/server.ts | pino-pretty -c",
    "build": "rimraf dist && tsc -p tsconfig-build.json && tsconfig-replace-paths -p tsconfig-build.json -s ./src -o ./dist",
    "lint": "eslint --fix --ext .js,.ts .",
    "test": "jest --passWithNoTests --runInBand --silent --no-cache",
    "test:staged": "npm run test",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:ci": "npm test -- --coverage",
    "depcruiser": "depcruise --config .dependency-cruiser.js src",
    "depcruiser:graph": "depcruise --include-only \"^src\" --output-type dot src | dot -T svg > dependencygraph.svg",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "version": "auto-changelog -p -b 1000 -l 1000 --template keepachangelog && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "auto-changelog": "^2.4.0",
    "better-sqlite3": "^7.6.2",
    "dependency-cruiser": "^11.13.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.1.3",
    "graphql": "^16.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^13.0.3",
    "pino-pretty": "^8.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-replace-paths": "0.0.11",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "apollo-server-express": "^3.10.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mongodb": "3.7.0",
    "openapi-types": "^12.0.0",
    "pg": "^8.7.3",
    "pino": "^8.3.1",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7"
  }
}
