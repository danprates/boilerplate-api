{
  "name": "api",
  "version": "1.0.0",
  "description": "A boilerplate API made with clean architecture",
  "main": "dist/server.js",
  "keywords": [
    "Boilerplate",
    "API",
    "Backend",
    "NodeJS",
    "ExpressJS",
    "Clean Architecture"
  ],
  "author": "Daniel Prates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:danprates/boilerplate-api.git"
  },
  "engines": {
    "node": ">=16.14.2",
    "npm": ">=8.5.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9222 --respawn --transpile-only --ignore-watch node_modules src/server.ts | pino-pretty -c",
    "build": "rimraf dist && tsc -p tsconfig-build.json && tsconfig-replace-paths -p tsconfig-build.json -s ./src -o ./dist",
    "lint": "eslint --fix --ext .js,.ts .",
    "test": "vitest run",
    "test:staged": "vitest related --passWithNoTests",
    "test:watch": "vitest watch",
    "test:ci": "vitest run --coverage",
    "depcruiser": "depcruise --config .dependency-cruiser.js src",
    "depcruiser:graph": "depcruise --include-only \"^src\" --output-type dot src | dot -T svg > dependencygraph.svg",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "version": "auto-changelog -p -b 1000 -l 1000 --template keepachangelog && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@vitest/coverage-c8": "^0.23.2",
    "auto-changelog": "^2.4.0",
    "dependency-cruiser": "^11.15.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "git-commit-msg-linter": "^4.1.3",
    "graphql": "^16.6.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^13.0.3",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "tsconfig-replace-paths": "0.0.11",
    "typescript": "^4.7.4",
    "vitest": "^0.23.2",
    "vitest-sonar-reporter": "^0.3.2"
  },
  "dependencies": {
    "apollo-server-express": "^3.10.2",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "openapi-types": "^12.0.2",
    "pg": "^8.8.0",
    "pino": "^8.5.0",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.9"
  }
}
